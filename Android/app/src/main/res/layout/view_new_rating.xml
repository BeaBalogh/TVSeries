<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_rounded">

    <EditText
        android:id="@+id/etTextNewComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbNewComment"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/bottomnav_color"
        android:gravity="start|top"
        android:hint="@string/write_down_your_experiences"
        android:inputType="textMultiLine"
        android:maxHeight="100dp"
        android:maxLines="6"
        android:textColor="@color/colorText"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="@color/colorText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSendComment"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/send"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTextNewComment"
        app:strokeColor="@color/colorText" />


    <RatingBar
        android:id="@+id/rbNewComment"
        style="@android:style/Widget.Material.Light.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="8dp"
        android:isIndicator="false"
        android:max="5"
        android:progressTint="#FFD54F"
        android:rating="5"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTextNewComment" />
</androidx.constraintlayout.widget.ConstraintLayout>
